{
    "manifest_version": 3,
    "name": "Joke Generator",
    "version": "1.0",
    "description": "Get a random joke on each click!",
    "permissions": [
      "https://v2.jokeapi.dev/"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    },
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
  